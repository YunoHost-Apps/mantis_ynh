{
    "name": "Mantis",
    "id": "mantis",
    "packaging_format": 1,
    "description": {
        "en": "Bug tracking system based on a web interface.",
        "fr": "Système de suivi des bugs reposant sur une interface web."
    },
    "version": "2.25.0~ynh1",
    "url": "https://www.mantisbt.org/",
    "license": "GPL-3.0-only",
    "maintainer": {
        "name": "liberodark",
        "email": "liberodark@gmail.com"
    },
    "requirements": {
        "yunohost": ">= 4.1.7"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php7.3-fpm",
        "mysql"
    ],
    "arguments": {
        "install": [{
                "name": "domain",
                "type": "domain",
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/mantis",
                "default": "/mantis"
            },        
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "admin",
                "type": "user",
                "example": "johndoe"
            },
            {
                "name": "default_access_level",
                "type": "string",
                "ask": {
                    "en": "Choose the default access level for new users",
                    "fr": "Choisissez le niveau d'accès par défaut pour les nouveaux utilisateurs"
                },
                "choices": ["VIEWER", "REPORTER", "UPDATER", "DEVELOPER", "MANAGER"],
                "default": "REPORTER"
            }
        ]
    }
}
