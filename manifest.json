{
    "name": "Mantis",
    "id": "mantis",
    "packaging_format": 1,
    "description": {
        "en": "An issue tracker that provides a balance between simplicity and power",
        "fr": "Un gestionnaire de ticket avec un équilibre entre simplicité et puissance"
    },
    "version": "2.19.0",
    "url": "https://www.mantisbt.org/",
    "license": "GPL-3.0",
    "maintainer": {
        "name": "liberodark",
        "email": "liberodark@gmail.com"
    },
    "requirements": {
        "yunohost": ">= 2.7.2"
    },
    "multi_instance": false,
    "services": [
        "nginx",
        "php5-fpm",
        "mysql"
    ],
    "arguments": {
        "install": [{
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for Mantis",
                    "fr": "Choisissez un nom de domaine pour Mantis"
                },
                "example": "example.com"
            },

            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Mantis /mantis is accepted",
                    "fr": "Choisissez un chemin pour Mantis /mantis est accepté"
                },
                "example": "/mantis",
                "default": "/mantis"
            },
            
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public site ?",
                    "fr": "Est-ce un site public ?"
                },
                "default": "true"
            }
        ]
    }
}
